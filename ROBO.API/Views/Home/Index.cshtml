@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - R.O.B.O</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Bem vindo ao R.O.B.O</h1>
        <button id="ligarRoboButton">Ligar Robo</button>
        <button id="inclinarCabecaButton">Inclinar Cabeca</button>
        <button id="rotacionarCabecaButton">Rotacionar Cabeca</button>
        <button id="moverCotoveloButton">Mover Cotovelo</button>
        <button id="rotacionarPulsoButton">Rotacionar Pulso</button>
        <div id="roboStatus"></div>
        <div id="roboState" style="display: none;">
            <h2>Estado do Robo</h2>
            <p id="estadoCabeca"></p>
            <p id="estadoBracoDireito"></p>
            <p id="estadoBracoEsquerdo"></p>
        </div>
    </div>

    <script>
        function atualizarEstadoRobo(data) {
            if (data.cabeca) {
                $('#estadoCabeca').html('<strong>CABEÇA:</strong> Inclinaçao: ' + data.cabeca.inclinacao + ', Rotaçao: ' + data.cabeca.rotacao);
            }
            if (data.bracoDireito) {
                $('#estadoBracoDireito').html('<strong>BRACO DIREITO:</strong> Cotovelo: ' + data.bracoDireito.cotovelo + ', Pulso: ' + data.bracoDireito.pulso);
            }
            if (data.bracoEsquerdo) {
                $('#estadoBracoEsquerdo').html('<strong>BRACO ESQUERDO:</strong> Cotovelo: ' + data.bracoEsquerdo.cotovelo + ', Pulso: ' + data.bracoEsquerdo.pulso);
            }
            $('#roboState').show();
        }

        $(document).ready(function () {
            $('#ligarRoboButton').click(function () {
                $.ajax({
                    url: '/v1/LigarRobo',
                    type: 'GET',
                    success: function (data) {
                        if (data.cabeca) {
                            var statusHtml = '<p>Robo ligado com sucesso!</p>';
                            $('#roboStatus').html(statusHtml);
                            atualizarEstadoRobo(data);
                        } else if (data.error) {
                            $('#roboStatus').html('<p>Erro ao ligar o robo: ' + data.error + '</p>');
                        } else {
                            $('#roboStatus').html('<p>Erro desconhecido ao ligar o robo.</p>');
                        }
                    },
                    error: function () {
                        $('#roboStatus').html('<p>Erro ao ligar o robo.</p>');
                    }
                });
            });

            $('#inclinarCabecaButton').click(function () {
                var inclinacao = prompt("Digite a inclinação da cabeça:\n1. Para Cima\n2. Em Repouso\n3. Para Baixo");
                $.ajax({
                    url: '/v1/InclinarCabeca',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(parseInt(inclinacao)),
                    success: function (data) {
                        if (data.cabeca) {
                            var statusHtml = '<p>Cabeça inclinada com sucesso!</p>';
                            $('#roboStatus').html(statusHtml);
                            atualizarEstadoRobo(data);
                        } else if (data.error) {
                            $('#roboStatus').html('<p>Erro ao inclinar a cabeça: ' + data.error + '</p>');
                        } else {
                            $('#roboStatus').html('<p>Erro desconhecido ao inclinar a cabeça.</p>');
                        }
                    },
                    error: function () {
                        $('#roboStatus').html('<p>Erro ao inclinar a cabeça.</p>');
                    }
                });
            });

            $('#rotacionarCabecaButton').click(function () {
                var rotacao = prompt("Digite a rotacao da cabeça:\n1. Rotação -90º\n2. Rotação - 45º\n3. Em Repouso\n4. Rotação 45º\n5. Rotação 90º");
                $.ajax({
                    url: '/v1/RotacionarCabeca',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(parseInt(rotacao)),
                    success: function (data) {
                        if (data.cabeca) {
                            var statusHtml = '<p>Cabeça rotacionada com sucesso!</p>';
                            $('#roboStatus').html(statusHtml);
                            atualizarEstadoRobo(data);
                        } else if (data.error) {
                            $('#roboStatus').html('<p>Erro ao rotacionar a cabeça: ' + data.error + '</p>');
                        } else {
                            $('#roboStatus').html('<p>Erro desconhecido ao rotacionar a cabeça.</p>');
                        }
                    },
                    error: function () {
                        $('#roboStatus').html('<p>Erro ao rotacionar a cabeça.</p>');
                    }
                });
            });

            $('#moverCotoveloButton').click(function () {
                var posicao = prompt("Digite a posicao do cotovelo:\n1. Em Repouso\n2. Levemente Contraído\n3. Contraído\n4. Fortemente Contraído");
                var lado = prompt("Digite o lado do braço:\n1. Direito\n2. Esquerdo");
                $.ajax({
                    url: '/v1/MoverCotovelo',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ posicao: parseInt(posicao), lado: parseInt(lado) }),
                    success: function (data) {
                        if (data.cabeca) {
                            var statusHtml = '<p>Cotovelo movido com sucesso!</p>';
                            $('#roboStatus').html(statusHtml);
                            atualizarEstadoRobo(data);
                        } else if (data.error) {
                            $('#roboStatus').html('<p>Erro ao mover o cotovelo: ' + data.error + '</p>');
                        } else {
                            $('#roboStatus').html('<p>Erro desconhecido ao mover o cotovelo.</p>');
                        }
                    },
                    error: function () {
                        $('#roboStatus').html('<p>Erro ao mover o cotovelo.</p>');
                    }
                });
            });

            $('#rotacionarPulsoButton').click(function () {
                var rotacao = prompt("Digite a rotaçao do pulso:\n1. Rotação para -90º\n2. Rotação para - 45º\n3. Em Repouso\n4. Rotação para 45º\n5. Rotação para 90º\n6. Rotação para 135º\n7. Rotação para 180º");
                var lado = prompt("Digite o lado do braço:\n1. Direito\n2. Esquerdo");
                $.ajax({
                    url: '/v1/RotacionarPulso',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ rotacao: parseInt(rotacao), lado: parseInt(lado) }),
                    success: function (data) {
                        if (data.bracoDireito || data.bracoEsquerdo) {
                            var statusHtml = '<p>Pulso rotacionado com sucesso!</p>';
                            $('#roboStatus').html(statusHtml);
                            atualizarEstadoRobo(data);
                        } else if (data.error) {
                            $('#roboStatus').html('<p>Erro ao rotacionar o pulso: ' + data.error + '</p>');
                        } else {
                            $('#roboStatus').html('<p>Erro desconhecido ao rotacionar o pulso.</p>');
                        }
                    },
                    error: function () {
                        $('#roboStatus').html('<p>Erro ao rotacionar o pulso.</p>');
                    }
                });
            });
        });
    </script>
</body>
</html>
